            }
        }

        #loading-screen h1 {
            position: absolute;
            height: 40px;
            margin: auto;
            top: 220px;
            left: 0;
            right: 0;
            bottom: 0;
            text-transform: uppercase;
            text-align: center;
            letter-spacing: 0.1em;
            font-size: 14px;
            font-weight: lighter;
            color: white;

            span {
                display: none;
            }

            &::after {
                animation: txt 5s infinite;
                content: "";
            }
        }

        @keyframes rt {
            100% {
                transform: rotate(360deg);
            }
        }

        @keyframes cw {
            0% {
                width: 0;
                height: 0;
            }

            75% {
                width: 40px;
