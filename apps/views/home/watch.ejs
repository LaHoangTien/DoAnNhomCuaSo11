    <style>
        .carousel-centered span {
            font-size: 17px;
            font-weight: 400;
            font-family: Hind, sans-serif;
            color: #dbdbdb;
            line-height: 1.4;
            margin-bottom: 15px;
        }

        .detail-poster {
            position: relative;
            display: inline-block;
            border-radius: 6px;
            overflow: hidden;
            width: 100%;
            box-shadow: 0 0 20px #9b9493;
        }

        .detail-poster img {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;

        }

        .title-row {
            display: flex;
            align-items: center;
            font-weight: 600;
            background: linear-gradient(45deg, #8b89f5, #d286e4, #ffffff);
            /* Màu gradient */
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            /* Làm chữ đậm hơn */
            margin-bottom: 0px;
        }

        .title-row h5,
        .title-row h6 {
            margin: 0;
            padding: 0;
        }

        .title-row h6 {
            margin-left: 4px;
            padding: 0;
        }



        .item-detail {
            position: relative;
            background-size: cover;
            background-position: top;
        }

        /* Thêm lớp phủ */
        .item-detail::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at center, rgba(0, 0, 0, 0.137) 30%, rgb(0, 0, 0) 100%),
                linear-gradient(to bottom, rgba(0, 0, 0, 0.136) 90%, rgb(0, 0, 0) 100%);
            z-index: 1;
            /* Nằm dưới nội dung */
        }



        #titleMovie .row {
            display: flex;
            align-items: center;
            /* Căn giữa theo chiều dọc */
            gap: 10px;
            /* Tạo khoảng cách giữa icon và chữ */
            margin-left: 20px;
        }

        #titleMovie .row a {
            display: flex;
            align-items: center;
            text-decoration: none;
            /* Bỏ gạch chân */
        }

        #titleMovie .row i:hover {
            color: #d286e4;

        }

        #titleMovie .row i {
            font-size: 30px;
            /* Kích thước icon */
            color: #ffffff;
            /* Màu icon */
        }

        #titleMovie .row h4 {
            margin: 0;
            font-weight: 600;
            background: linear-gradient(45deg, #8b89f5, #d286e4, #ffffff);
            /* Màu gradient */
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            /* Làm chữ đậm hơn */
            text-shadow: #dbdbdb;
        }
    </style>
